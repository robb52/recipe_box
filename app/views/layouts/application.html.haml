!!! 5
%html
%head
  %title Recipe App
  = csrf_meta_tags 
  = csp_meta_tag 

  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload' 

%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "Recipe Box", root_path
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right 
          %li= link_to "New Recipe", new_recipe_path, class: "nav-recipe"
          %li= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-sign"
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Sign Up", new_user_registration_path, class: "nav-recipe"
          %li= link_to "Sign In", new_user_session_path, class: "nav-sign"

  .container
    - flash.each do |name, msg|
      =content_tag :div, msg, class: "alert"

    = yield


